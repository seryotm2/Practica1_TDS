<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #F0FFFF; -fx-border-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="umu.tds.apps.AppControlGastos.view.AnadirGastoCompartidoController">
   <top>
      <VBox alignment="CENTER" prefHeight="60.0" style="-fx-background-color: #00FF00; -fx-border-color: black;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Gasto Compartido">
               <font>
                  <Font name="DejaVu Serif Bold" size="24.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         <children>
            <GridPane hgap="10.0" vgap="10.0">
               <children>
                  <Label text="Cuenta / Grupo:" GridPane.rowIndex="0" />
                  <ComboBox fx:id="comboCuentas" prefWidth="250.0" promptText="Selecciona grupo..." GridPane.columnIndex="1" GridPane.rowIndex="0" />
      
                  <Label text="Pagado por:" GridPane.rowIndex="1" />
                  <ComboBox fx:id="comboPagador" prefWidth="250.0" promptText="Quién pagó..." GridPane.columnIndex="1" GridPane.rowIndex="1" />
      
                  <Label text="Concepto:" GridPane.rowIndex="2" />
                  <TextField fx:id="txtConcepto" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  
                  <Label text="Total (€):" GridPane.rowIndex="3" />
                  <TextField fx:id="txtCantidad" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  
                  <Label text="Fecha:" GridPane.rowIndex="4" />
                  <DatePicker fx:id="datePickerFecha" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               </children>
            </GridPane>
            
            <Label text="Reparto de costes (Edita los % en la tabla):">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            
            <TableView fx:id="tablaReparto" editable="true" prefHeight="200.0" style="-fx-border-color: #999;" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colNombre" prefWidth="200.0" text="Participante" />
                <TableColumn fx:id="colPorcentaje" prefWidth="100.0" text="Porcentaje (%)" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </center>
   
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" style="-fx-border-color: black; -fx-background-color: #F0FFFF;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="15.0" top="15.0" />
         </padding>
         <children>
            <Button mnemonicParsing="false" onAction="#guardarGastoCompartido" style="-fx-background-color: #00FF00; -fx-border-color: black;" text="Registrar en Grupo" />
            <Button mnemonicParsing="false" onAction="#cancelar" style="-fx-background-color: #FF6347; -fx-border-color: black;" text="Cancelar" textFill="WHITE" />
         </children>
      </HBox>
   </bottom>
</BorderPane>