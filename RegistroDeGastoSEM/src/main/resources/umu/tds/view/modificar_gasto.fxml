<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="350.0" prefWidth="400.0" style="-fx-background-color: #F0FFFF; -fx-border-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="umu.tds.apps.AppControlGastos.view.ModificarGastoController">
   <top>
      <VBox alignment="CENTER" prefHeight="50.0" style="-fx-background-color: #FFA500; -fx-border-color: black;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Modificar Gasto" textFill="WHITE">
               <font>
                  <Font name="DejaVu Serif Bold" size="20.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
         <children>
            <Label text="Concepto:" />
            <TextField fx:id="txtConcepto" />
            
            <Label text="Categoría (Elegir existente):" />
            <ComboBox fx:id="comboCategoria" prefWidth="400.0" />
            
            <Label text="Cantidad (€):" />
            <TextField fx:id="txtCantidad" />
            
            <Label text="Fecha:" />
            <DatePicker fx:id="dateFecha" prefWidth="400.0" />
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" style="-fx-border-color: black; -fx-background-color: #F0FFFF;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="15.0" top="15.0" />
         </padding>
         <children>
            <Button mnemonicParsing="false" onAction="#guardarCambios" style="-fx-background-color: #008000; -fx-border-color: black;" text="Guardar Cambios" textFill="WHITE" />
            <Button mnemonicParsing="false" onAction="#cancelar" style="-fx-background-color: #696969; -fx-border-color: black;" text="Cancelar" textFill="WHITE" />
         </children>
      </HBox>
   </bottom>
</BorderPane>