<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="550.0" prefWidth="750.0" style="-fx-background-color: #F0FFFF; -fx-border-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="umu.tds.apps.AppControlGastos.view.EstadisticasController">
   <top>
      <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #4682B4; -fx-border-color: black;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Análisis de Gastos" textFill="WHITE">
               <font>
                  <Font name="DejaVu Serif Bold" size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label text="Periodo:" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="comboPeriodo" prefWidth="150.0" style="-fx-background-color: white;" />
                  <Label text="Tipo de Gráfico:" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="comboTipoGrafico" prefWidth="150.0" style="-fx-background-color: white;" />
               </children>
               <padding>
                  <Insets bottom="15.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets top="15.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <StackPane fx:id="panelGraficos" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <BarChart fx:id="graficoBarras" legendSide="RIGHT" title="Gastos por Categoría">
              <xAxis>
                <CategoryAxis label="Categoría" side="BOTTOM" tickLabelFill="#363636">
                     <tickLabelFont>
                        <Font name="System Bold" size="11.0" />
                     </tickLabelFont></CategoryAxis>
              </xAxis>
              <yAxis>
                <NumberAxis label="Importe (€)" side="LEFT" tickLabelFill="#363636">
                     <tickLabelFont>
                        <Font name="System Bold" size="12.0" />
                     </tickLabelFont></NumberAxis>
              </yAxis>
            </BarChart>
            
            <PieChart fx:id="graficoCircular" title="Distribución Porcentual" visible="false" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </StackPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" style="-fx-border-color: black; -fx-background-color: #F0FFFF;" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#cerrar" prefWidth="100.0" style="-fx-background-color: #696969; -fx-border-color: black;" text="Cerrar" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="15.0" top="15.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>