<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="200.0" prefWidth="350.0" style="-fx-background-color: #F0FFFF; -fx-border-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="umu.tds.apps.AppControlGastos.view.CrearCategoriaController">
   <top>
      <VBox alignment="CENTER" prefHeight="50.0" style="-fx-background-color: #00FF00; -fx-border-color: black;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Nueva Categoría">
               <font>
                  <Font name="DejaVu Serif Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   
   <center>
      <VBox alignment="CENTER_LEFT" spacing="15.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
         <children>
            <Label text="Nombre de la Categoría:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="txtNombreCategoria" />
         </children>
      </VBox>
   </center>
   
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" style="-fx-border-color: black; -fx-background-color: #F0FFFF;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="15.0" top="15.0" />
         </padding>
         <children>
            <Button mnemonicParsing="false" onAction="#guardarCategoria" style="-fx-background-color: #00FF00; -fx-border-color: black;" text="Crear" />
            <Button mnemonicParsing="false" onAction="#cancelar" style="-fx-background-color: #FF6347; -fx-border-color: black;" text="Cancelar" textFill="WHITE" />
         </children>
      </HBox>
   </bottom>
</BorderPane>