<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #F0FFFF; -fx-border-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="umu.tds.apps.AppControlGastos.view.CrearCuentaController">
   <top>
      <VBox alignment="CENTER" prefHeight="60.0" style="-fx-background-color: #00FF00; -fx-border-color: black;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Nueva Cuenta Compartida">
               <font>
                  <Font name="DejaVu Serif Bold" size="24.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label text="Nombre de la Cuenta / Grupo:" />
            <TextField fx:id="txtNombreCuenta" promptText="Ej: Piso Estudiantes" />
            
            <Label text="Seleccionar Participante:" />
            <HBox spacing="10.0">
               <children>
                  <ComboBox fx:id="comboUsuarios" prefWidth="300.0" promptText="Elige un usuario..." />
                  <Button mnemonicParsing="false" onAction="#anadirParticipante" style="-fx-background-color: #696969;" text="AÃ±adir a la lista" textFill="WHITE" />
               </children>
            </HBox>
            
            <Label text="Participantes en el grupo:" />
            <ListView fx:id="listaParticipantes" prefHeight="200.0" prefWidth="200.0" />
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" style="-fx-border-color: black; -fx-background-color: #F0FFFF;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="15.0" top="15.0" />
         </padding>
         <children>
            <Button mnemonicParsing="false" onAction="#crearCuenta" style="-fx-background-color: #00FF00; -fx-border-color: black;" text="Crear Cuenta" />
            <Button mnemonicParsing="false" onAction="#cancelar" style="-fx-background-color: #FF6347; -fx-border-color: black;" text="Cancelar" textFill="WHITE" />
         </children>
      </HBox>
   </bottom>
</BorderPane>